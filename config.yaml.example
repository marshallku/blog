# blog Configuration File
# This file controls site settings and build configuration

# Site metadata
site:
    title: "Example Blog"
    url: "https://example.com"
    author: "Example Author"
    description: "Example blog"
    cdn_url: "https://cdn.example.com"

# Build configuration
build:
    # Content directory (where markdown posts are stored)
    content_dir: "content/posts"

    # Output directory (where generated HTML goes)
    output_dir: "dist"

    # Number of posts per page (for pagination)
    posts_per_page: 9

    # Generate partial HTML files for SPA navigation
    generate_partials: true

    # Directory name for partial files (relative to output_dir)
    partial_dir: "html"
