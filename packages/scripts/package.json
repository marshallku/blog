{
    "name": "@blog/scripts",
    "version": "0.1.1",
    "private": true,
    "description": "TypeScript scripts for the blog",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./bundle.js": "./dist/bundle.js"
    },
    "files": [
        "dist"
    ],
    "blog": {
        "assets": {
            "bundle": "bundle.js",
            "index": "index.js",
            "comment": "comment.global.js"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "clean": "rm -rf dist",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "tsup": "^8.5.0",
        "typescript": "^5.9.3"
    }
}
