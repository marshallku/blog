{
    "name": "@blog/styles",
    "version": "0.2.1",
    "private": true,
    "description": "SCSS processing and optimization for the blog",
    "type": "module",
    "exports": {
        "./critical.css": "./dist/critical.css",
        "./post.css": "./dist/post.css",
        "./list.css": "./dist/list.css",
        "./tags.css": "./dist/tags.css"
    },
    "files": [
        "dist"
    ],
    "blog": {
        "assets": {
            "critical": "critical.css",
            "post": "post.css",
            "list": "list.css",
            "tags": "tags.css"
        }
    },
    "scripts": {
        "build": "sass src/critical.scss:dist/critical.css src/post.scss:dist/post.css src/list.scss:dist/list.css src/tags.scss:dist/tags.css --style=compressed --no-source-map && postcss dist/*.css --dir dist --env production",
        "dev": "sass src/critical.scss:dist/critical.css src/post.scss:dist/post.css src/list.scss:dist/list.css src/tags.scss:dist/tags.css --watch",
        "clean": "rm -rf dist",
        "lint": "stylelint 'src/**/*.scss'"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.21",
        "cssnano": "^7.0.6",
        "postcss": "^8.5.1",
        "postcss-cli": "^11.0.0",
        "sass": "^1.93.2",
        "stylelint": "^16.11.0",
        "stylelint-config-standard-scss": "^14.0.0"
    }
}
