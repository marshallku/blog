{
    "name": "@blog/styles",
    "version": "0.1.0",
    "private": true,
    "description": "CSS processing and optimization for the blog",
    "type": "module",
    "exports": {
        "./theme.css": "./dist/theme.css"
    },
    "files": [
        "dist"
    ],
    "blog": {
        "assets": {
            "theme": "theme.css"
        }
    },
    "scripts": {
        "build": "postcss src/**/*.css --dir dist --env production",
        "dev": "postcss src/**/*.css --dir dist --watch",
        "clean": "rm -rf dist",
        "lint": "stylelint 'src/**/*.css'"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.21",
        "cssnano": "^7.0.6",
        "postcss": "^8.5.1",
        "postcss-cli": "^11.0.0",
        "postcss-import": "^16.1.0",
        "postcss-nested": "^7.0.2",
        "stylelint": "^16.11.0",
        "stylelint-config-standard": "^37.0.0"
    }
}
