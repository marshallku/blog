{
    "name": "@blog/styles",
    "version": "0.1.3",
    "private": true,
    "description": "SCSS processing and optimization for the blog",
    "type": "module",
    "exports": {
        "./theme.css": "./dist/theme.css"
    },
    "files": [
        "dist"
    ],
    "blog": {
        "assets": {
            "theme": "theme.css"
        }
    },
    "scripts": {
        "build": "sass src/theme.scss dist/theme.css --style=compressed --no-source-map && postcss dist/theme.css -o dist/theme.css --env production",
        "dev": "sass src/theme.scss dist/theme.css --watch",
        "clean": "rm -rf dist",
        "lint": "stylelint 'src/**/*.scss'"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.21",
        "cssnano": "^7.0.6",
        "postcss": "^8.5.1",
        "postcss-cli": "^11.0.0",
        "sass": "^1.93.2",
        "stylelint": "^16.11.0",
        "stylelint-config-standard-scss": "^14.0.0"
    }
}
